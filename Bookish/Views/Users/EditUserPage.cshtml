@model Bookish.Models.Requests.EditUserRequestModel;

@{
    var user = (UserModel) ViewData["currentUser"];
}

<form action="edit" method="POST">
    <input id="id" type="hidden" name="id" value="@user.id"/>
    
    <label for="first_name">First name</label>
    <input id="first_name" type="text" name="first_name" value="@user.first_name"/><br/>
    
    <label for="last_name">Last name</label>
    <input id="last_name" type="text" name="last_name" value="@user.last_name"/><br/>
    
    <label for="email_address">Email address</label>
    <input id="email_address" type="email" name="email_address" value="@user.email_address"/><br/>
    
    <input id="balance" type="hidden" name="balance" value="@user.balance"/>
    
    <input type="submit"/>
</form>
@model UsersModel;

<a href="users/create">Create New User</a>

<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Balance</th>
    </tr>
    
    @{
        foreach (var user in Model.users)
        {
            <tr>
                <td>@user.first_name</td>
                <td>@user.last_name</td>
                <td>@user.email_address</td>
                <td>@Model.FormatBalance(user.balance)</td>
            </tr>
        }
    }
</table>